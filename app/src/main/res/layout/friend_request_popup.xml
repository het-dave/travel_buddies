<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:layout_gravity="center"
    android:padding="5dp">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/popup_shape"
    android:id="@+id/background"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/textView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:text="NAVNEET KUMAR (MALE) has requested to pair with you."
    android:textAlignment="center"
    android:paddingTop="30dp"
    android:textColor="@color/white"
    android:fontFamily="@font/autor_one"
/>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/button1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Accept"
    android:src="@drawable/popup_button"
    app:layout_constraintEnd_toStartOf="@+id/button2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    android:layout_marginHorizontal="15dp"
    android:background="@color/white"
    android:layout_marginTop="35dp"
    android:textColor="#127E01"
/>

<androidx.appcompat.widget.AppCompatButton
    android:id="@+id/button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reject"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/button1"
    app:layout_constraintTop_toBottomOf="@+id/textView"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="35dp"
    android:background="@color/white"
    android:textColor="#D90000"
/>

</androidx.constraintlayout.widget.ConstraintLayout>